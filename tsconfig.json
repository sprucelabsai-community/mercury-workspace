{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": [
			"ES2017",
			"DOM"
		],
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "build",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				"packages/mercury-client/src/.spruce/*"
			]
		}
	},
	"include": [
		"./*.ts",
		"./**/*.ts"
	],
	"exclude": [
		"**/node_modules/**",
		"./packages/**/build"
	]
}