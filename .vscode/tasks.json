{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch.build",
            "group": "build",
            "problemMatcher": [],
            "label": "watch.build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "promptOnClose": false,
            "presentation": {
                "panel": "dedicated",
            }
        },
        {
            "label": "test.file",
            "command": "spruce",
            "args": [
                "test",
                "--inspect",
                "5200",
                "--pattern",
                "${fileBasenameNoExtension}",
                "--shouldWatch"
            ],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "promptOnClose": false,
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--inspect",
                "5200",
                "--shouldHoldAtStart",
                "true"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "spruce",
            "type": "shell",
            "command": "spruce ${input:spruceCommand}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        },
        {
            "label": "yarn",
            "type": "shell",
            "command": "yarn ${input:yarnCommand}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "spruceCommand",
            "description": "spruce command",
            "default": "create.test",
            "type": "promptString"
        },
        {
            "id": "yarnCommand",
            "description": "yarn command",
            "default": "add",
            "type": "promptString"
        }
    ]
}