{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "problem.watcher",
            "command": "yarn",
            "group": "build",
            "args": [
                "tsc-watch",
                "--noClear",
                "-b",
                "-w"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "focus": false
            },
            "problemMatcher": {
                "base": "$tsc-watch",
                "applyTo": "allDocuments"
            }
        },
        {
            "type": "npm",
            "script": "watch.build.dev",
            "group": "build",
            "problemMatcher": [],
            "label": "watch.build.dev",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "promptOnClose": false,
            "presentation": {
                "panel": "dedicated",
                "focus": false,
                "reveal": "silent"
            }
        },
        {
            "label": "test.file",
            "command": "spruce",
            "args": [
                "test",
                "--inspect",
                "5200",
                "--pattern",
                "${fileBasenameNoExtension}",
                "--watchMode",
                "standard"
            ],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "promptOnClose": false,
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "client.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "emitter.test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--shouldHoldAtStart",
                "true",
                "--watchMode",
                "smart"
            ],
            "promptOnClose": false,
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-event-emitter"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "spruce",
            "type": "shell",
            "command": "spruce ${input:spruceCommand}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-${input:packageName}"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        },
        {
            "label": "yarn",
            "type": "shell",
            "command": "yarn ${input:yarnCommand}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/packages/mercury-client"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "description": "mercury-*",
            "type": "promptString",
        },
        {
            "id": "spruceCommand",
            "description": "spruce command",
            "default": "create.test",
            "type": "promptString"
        },
        {
            "id": "yarnCommand",
            "description": "yarn command",
            "default": "add",
            "type": "promptString"
        }
    ]
}