	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "attach",
			"port": 5200,
			"restart": true,
			"timeout": 10000
		},
		{
			"type": "node",
			"request": "launch",
			"name": "client.test.file",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest",
				"${fileBasenameNoExtension}",
				"--detectOpenHandles"
			],
			"port": 9229,
			"cwd": "${workspaceFolder}/packages/mercury-client",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "client.test.all",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest"
			],
			"port": 9229,
			"cwd": "${workspaceFolder}/packages/mercury-client",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}