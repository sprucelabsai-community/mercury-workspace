{
	"debug.node.autoAttach": "off",
	"git.ignoreLimitWarning": true,
	"javascript.validate.enable": false,
	"editor.formatOnSave": true,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/build/**": true,
		"**/browser/**": true,
		"**/node_modules/**": true,
	},
	"search.exclude": {
		"**/node_modules/**": false,
		"**/browser/**": false,
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"eslint.workingDirectories": [
		"./packages/mercury-client",
		"./packages/mercury-event-emitter",
		"./packages/mercury-types"
	],
	"eslint.options": {
		"extensions": [
			".js",
			".jsx",
			".ts",
			".tsx"
		]
	},
	"typescript.preferences.importModuleSpecifier": "relative",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"cSpell.ignorePaths": [
		"**/package-lock.json",
		"**/node_modules/**",
		"**/build/**",
		"**/browser/**",
		"**/vscode-extension/**",
		"**/.git/objects/**",
		".vscode",
		".spruce"
	],
	"cSpell.words": [
		"arkit",
		"autogenerated",
		"spreedsheet"
	],
	"files.exclude": {},
	"typescript.tsdk": "node_modules/typescript/lib"
}