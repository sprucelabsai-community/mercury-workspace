{
	"name": "@sprucelabs/mercury-event-emitter",
	"publishConfig": {
		"access": "public"
	},
	"version": "16.0.3",
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"node": "./build/index.js",
			"require": "./build/index.js",
			"import": "./build/esm/index.js",
			"default": "./build/esm/index.js"
		}
	},
	"module": "./build/esm/index.js",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.tsc && yarn build.dist && yarn build.resolve-paths",
		"build.copy-files": "mkdir -p build/.spruce && cp -r ./src/.spruce/settings.json ./build/.spruce/",
		"build.dist": "tsc --project tsconfig.dist.json",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts -v",
		"build.tsc": "yarn build.copy-files && tsc",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"clean": "rm -rf build/",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"rebuild": "cd ../ && yarn rebuild",
		"release": "semantic-release",
		"test": "jest",
		"watch.build": "concurrently 'yarn run build.tsc' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.tsc && yarn build.resolve-paths'\"",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint' && echo 'PASS'"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/mercury-types": "latest",
		"@sprucelabs/schema": "latest",
		"@sprucelabs/spruce-event-utils": "latest"
	},
	"devDependencies": {
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@sprucelabs/test": "latest",
		"chokidar-cli": "^2.1.0",
		"eslint": "^7.21.0",
		"eslint-config-spruce": "^10.9.135",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"typescript": "^4.2.2"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 5000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/",
			"<rootDir>/build/esm/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/test",
			"@sprucelabs/error",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-event-utils"
		]
	}
}
