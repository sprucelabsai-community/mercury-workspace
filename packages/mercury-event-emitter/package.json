{
  "name": "@sprucelabs/mercury-event-emitter",
  "publishConfig": {
    "access": "public"
  },
  "version": "21.0.120",
  "files": [
    "build"
  ],
  "skill": {
    "namespace": "mercuryEventEmitter",
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/spruce-core-schemas",
      "@sprucelabs/spruce-skill-utils"
    ]
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "Types for Mercury!",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/mercury-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/mercury-workspace/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dist": "NODE_OPTIONS=--max_old_space_size=6144 tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && NODE_OPTIONS=--max_old_space_size=6144 tsc",
    "build.types": "tsc --emitDeclarationOnly && echo PASS",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "NODE_OPTIONS=--max_old_space_size=6144 eslint --fix --cache '**/*.ts'",
    "lint": "NODE_OPTIONS=--max_old_space_size=6144 eslint --cache '**/*.ts'",
    "rebuild": "cd ../ && yarn rebuild",
    "release": "semantic-release",
    "test": "jest",
    "update.dependencies": "cd ../ && yarn rebuild.dependencies",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.tsc": "tsc -w",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "lint.tsc": "tsc -p . --noEmit",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.407",
    "@sprucelabs/mercury-types": "^27.0.142",
    "@sprucelabs/schema": "^27.0.4",
    "@sprucelabs/spruce-event-utils": "^18.0.146"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.410",
    "@sprucelabs/jest-json-reporter": "^6.0.332",
    "@sprucelabs/resolve-path-aliases": "^1.1.2",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.283",
    "@sprucelabs/test-utils": "^3.0.481",
    "@types/node": "^17.0.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-spruce": "^10.11.2",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 5000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
