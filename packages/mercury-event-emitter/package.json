{
	"name": "@sprucelabs/mercury-event-emitter",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"version": "10.1.113",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.tsc": "tsc",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.babel.debug": "node --inspect-brk=5200 ../../node_modules/.bin/babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.watch": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.types && yarn build.resolve-paths'\"",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts -v",
		"rebuild": "cd ../ && yarn rebuild",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"lint.watch": "chokidar 'src/**/*' -c 'yarn lint' && echo 'PASS'",
		"release": "semantic-release",
		"test": "jest",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^2.4.1",
		"@sprucelabs/mercury-types": "^10.1.113",
		"@sprucelabs/schema": "^14.1.1"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.6",
		"@sprucelabs/test": "^7.1.4",
		"eslint": "^7.12.1",
		"eslint-config-spruce": "^10.9.103",
		"typescript": "^4.0.5"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	}
}
