{
	"name": "@sprucelabs/mercury-event-emitter",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"version": "15.2.2",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.babel.debug": "node --inspect-brk=5200 ../../node_modules/.bin/babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts -v",
		"build.tsc": "tsc",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"clean": "rm -rf build/",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"rebuild": "cd ../ && yarn rebuild",
		"release": "semantic-release",
		"test": "jest",
		"watch.build": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.types && yarn build.resolve-paths'\"",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint' && echo 'PASS'",
		"watch.tests": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/mercury-types": "latest",
		"@sprucelabs/schema": "latest",
		"@sprucelabs/spruce-event-utils": "latest"
	},
	"devDependencies": {
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@sprucelabs/test": "latest",
		"chokidar-cli": "^2.1.0",
		"eslint": "^7.18.0",
		"eslint-config-spruce": "^10.9.135",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"typescript": "^4.1.3"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 5000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/test",
			"@sprucelabs/error",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-event-utils"
		]
	}
}
