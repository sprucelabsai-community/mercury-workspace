{
	"compilerOptions": {
		"module": "es2015",
		"target": "es5",
		"lib": [
			"ES2015",
			"DOM"
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "src",
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./*.ts",
		"./**/*.ts"
	],
	"exclude": [
		"**/node_modules/*",
		"build/*",
		"browser/*",
		"**/__tests__/*"
	]
}