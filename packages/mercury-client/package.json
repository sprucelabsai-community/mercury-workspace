{
	"name": "@sprucelabs/mercury-client",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "14.5.1",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "The simple way to interact with the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn run build.tsc && yarn run build.browser",
		"build.tsc": "tsc",
		"build.browser": "rollup -c rollup.config.js && cd browser && mv index.js mercury.min.js",
		"build.umd": "rollup -c rollup.config.js && mkdir -p build/umd && cd build && sed s/index.js.map/mercury.js.map/ index.js > umd/mercury.js && mv index.js.map umd/mercury.js.map",
		"build.watch": "concurrently 'yarn build.tsc -w' 'yarn build.browser -w'",
		"clean": "rm -rf build/ browser/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"rebuild": "cd .. && yarn rebuild",
		"release": "semantic-release",
		"test": "jest",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": ">=4.0.1",
		"@sprucelabs/mercury-types": ">=14.5.0",
		"@sprucelabs/schema": ">=18.2.4",
		"dotenv": "^8.2.0",
		"socket.io-client": "^2.3.1"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": ">=3.1.2",
		"@sprucelabs/jest-sheets-reporter": ">=1.2.5",
		"@sprucelabs/semantic-release": ">=4.0.6",
		"@sprucelabs/test-utils": ">=3.0.1",
		"@types/debug": "^4.1.5",
		"@types/faker": "^5.1.5",
		"@types/socket.io-client": "^1.4.34",
		"arkit": "^1.6.4",
		"concurrently": "^5.3.0",
		"eslint": "^7.15.0",
		"eslint-config-spruce": "^10.9.120",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"rollup": "^2.34.2",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.29.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.2"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		},
		"reporters": [
			"default",
			[
				"@sprucelabs/jest-sheets-reporter",
				{
					"sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
					"worksheetId": 843037832,
					"testMap": {
						"cantEmitEventWithWithUnexpectedPayload": "F8",
						"factoryReturnsSocketIoClient": "F12",
						"canRunHealthCheck": "F13",
						"skillsCanListenToEachOther": "F22",
						"emitterGetsCalledBackForEachListener": "F23"
					}
				}
			]
		]
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/jest-sheets-reporter",
			"@sprucelabs/log",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/test",
			"@sprucelabs/test-utils"
		]
	}
}
