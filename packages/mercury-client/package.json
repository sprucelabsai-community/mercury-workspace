{
  "name": "@sprucelabs/mercury-client",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build"
  ],
  "version": "10.1.141",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "description": "The simple way to interact with the Spruce Experience Platform",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/mercury-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/mercury-workspace/issues"
  },
  "scripts": {
    "build": "yarn run build.tsc && yarn run build.browser",
    "build.tsc": "tsc",
    "build.browser": "rollup -c rollup.config.js && cd browser && mv index.js mercury.min.js",
    "build.umd": "rollup -c rollup.config.js && mkdir -p build/umd && cd build && sed s/index.js.map/mercury.js.map/ index.js > umd/mercury.js && mv index.js.map umd/mercury.js.map",
    "build.watch": "concurrently 'yarn build.tsc -w' 'yarn build.browser -w'",
    "clean": "rm -rf build/ browser/",
    "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
    "lint.fix": "eslint --fix '**/*.ts'",
    "rebuild": "cd .. && yarn rebuild",
    "release": "semantic-release",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@sprucelabs/mercury-types": "^10.1.141",
    "socket.io-client": "^3.0.0"
  },
  "devDependencies": {
    "@sprucelabs/semantic-release": "^4.0.6",
    "@sprucelabs/test-utils": "^1.2.49",
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.1.4",
    "@types/socket.io-client": "^1.4.34",
    "arkit": "^1.6.4",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-spruce": "^10.9.103",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
