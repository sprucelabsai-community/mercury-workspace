{
  "name": "@sprucelabs/mercury-client",
  "publishConfig": {
    "access": "public"
  },
  "version": "42.0.810",
  "files": [
    "build"
  ],
  "skill": {
    "namespace": "mercuryClient",
    "commandOverrides": {
      "sync.schemas": "--shouldFetchCoreSchemas false"
    },
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/mercury-event-emitter"
    ]
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "The simple way to interact with the Spruce Experience Platform",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/mercury-workspace",
  "bugs": {
    "url": "https://github.com/sprucelabsai/mercury-workspace/issues"
  },
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.tsc": "yarn build.copy-files && tsc",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "cd .. && yarn rebuild",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "cd ../ && yarn rebuild.dependencies",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/error": "^6.0.607",
    "@sprucelabs/schema": "^31.1.13",
    "@sprucelabs/spruce-core-schemas": "^40.2.6",
    "@sprucelabs/spruce-event-utils": "^40.2.106",
    "@sprucelabs/spruce-skill-utils": "^31.2.114",
    "dotenv": "^16.5.0",
    "just-clone": "^6.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^6.0.568",
    "@sprucelabs/jest-json-reporter": "^8.0.608",
    "@sprucelabs/mercury-core-events": "^26.0.89",
    "@sprucelabs/mercury-event-emitter": "^42.0.810",
    "@sprucelabs/mercury-types": "^47.2.95",
    "@sprucelabs/resolve-path-aliases": "^2.0.544",
    "@sprucelabs/semantic-release": "^5.0.2",
    "@sprucelabs/test": "^9.0.83",
    "@sprucelabs/test-utils": "^5.5.59",
    "@types/node": "^22.15.30",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.28.0",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^29.7.0",
    "jest-circus": "^30.0.0-beta.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "maxWorkers": 2,
    "testTimeout": 1200000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
