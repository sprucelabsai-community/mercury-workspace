{
	"name": "@sprucelabs/mercury-client",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "1.4.80",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "The simple way to interact with the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "npm run clean && npm run build.tsc",
		"build.tsc": "tsc | true",
		"#build.browser": "tsc --project tsconfig.browser.json",
		"#build.umd": "rollup -c rollup.config.js && mkdir -p build/umd && cd build && sed s/index.js.map/mercury.js.map/ index.js > umd/mercury.js && mv index.js.map umd/mercury.js.map",
		"watch": "chokidar 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png"
	},
	"dependencies": {
		"@sprucelabs/mercury-types": "^1.4.80",
		"socket.io-client": "^2.3.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^15.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-typescript": "^6.0.0",
		"@sprucelabs/semantic-release": "^4.0.5",
		"@types/debug": "^4.1.5",
		"@types/faker": "^5.1.0",
		"@types/socket.io-client": "^1.4.33",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.8.1",
		"eslint-config-spruce": "^10.9.40",
		"prettier": "^2.1.1",
		"rollup": "^2.26.11",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-globals": "^1.4.0",
		"rollup-plugin-replace": "^2.2.0",
		"typescript": "^4.0.2"
	}
}
