{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": [
			"es2017",
			"ES2020"
		],
		"declaration": true,
		"noImplicitAny": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "build",
		"baseUrl": "src",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				".spruce/*"
			]
		}
	},
	"include": [
		"./*.ts",
		"./**/*.ts",
		"../mercury-types/src/utilities/contract.utility.ts"
	],
	"exclude": [
		"build",
		"browser"
	]
}