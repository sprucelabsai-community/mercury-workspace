{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": ["es2017", "ES2020"],
		"declaration": true,
		"noImplicitAny": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "src",
		"experimentalDecorators": true,
		"paths": {
			"#spruce/*": [
				".spruce/*",
				"../node_modules/@sprucelabs/schema/build/.spruce/*",
				"../../../node_modules/@sprucelabs/schema/build/.spruce/*"
			]
		}
	},
	"include": ["./*.ts", "./**/*.ts"],
	"exclude": ["build"]
}
