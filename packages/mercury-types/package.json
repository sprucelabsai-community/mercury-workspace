{
	"name": "@sprucelabs/mercury-types",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"main": "./build/mercury.types.js",
	"types": "./build/mercury.types.d.ts",
	"version": "1.3.138",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.tsc",
		"build.tsc": "tsc && echo PASS",
		"build.watch": "tsc -w",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png",
		"test": "jest",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^2.2.169",
		"@sprucelabs/log": "^10.2.179",
		"@sprucelabs/schema": "^8.1.24",
		"@sprucelabs/spruce-skill-utils": "^10.22.1"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.5",
		"@sprucelabs/test": "^6.0.103",
		"arkit": "^1.6.4",
		"eslint": "^7.8.1",
		"eslint-config-spruce": "^10.9.29",
		"jest": "^26.4.2",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.0.2"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	}
}