{
	"name": "@sprucelabs/mercury-types",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"version": "1.7.5",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.tsc": "tsc",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.babel.debug": "node --inspect-brk=5200 ../../node_modules/.bin/babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.watch": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.types && yarn build.resolve-paths'\"",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts && resolve-path-aliases --target node_modules/@sprucelabs/schema/build",
		"rebuild": "cd ../ && yarn rebuild",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png",
		"test": "jest",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^2.2.268",
		"@sprucelabs/log": "^10.2.217",
		"@sprucelabs/schema": "^10.0.3",
		"@sprucelabs/spruce-skill-utils": "^10.26.37"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.5",
		"@sprucelabs/test": "^7.0.16",
		"arkit": "^1.6.4",
		"eslint": "^7.9.0",
		"eslint-config-spruce": "^10.9.47",
		"jest": "^26.4.2",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.0.2"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	}
}
