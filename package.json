{
	"version": "0.0.1",
	"private": true,
	"name": "spruce-mercury-workspace",
	"description": "All the tools you need to connect to a Mercury compatible API. ðŸ’¥",
	"workspaces": [
		"packages/mercury-client",
		"packages/mercury-event-emitter"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"scripts": {
		"arkit": "lerna run arkit",
		"arkit.png": "lerna run arkit.png",
		"build": "lerna run build",
		"clean": "lerna run clean",
		"clean.all": "lerna run clean && rm -f yarn.lock && rm -rf node_modules; for d in packages/*/node_modules; do echo $d; rm -rf $d; done",
		"fix.lint": "lerna run fix.lint",
		"lint": "lerna run lint",
		"publish": "lerna publish",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"test": "lerna run test --parallel",
		"upgrade.packages": "yarn upgrade --latest && rm -f yarn.lock && yarn | true && yarn fix.lint || true",
		"upgrade.packages.workspaces": "yarn && for d in packages/*; do cd $d; yarn-upgrade-all; cd ../..; done",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages.workspaces && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
		"watch.build": "lerna run watch.build --stream --parallel",
		"watch.lint": "lerna run watch.lint --stream --parallel",
		"watch.tests": "lerna run watch.tests --parallel"
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@sprucelabs/babel-plugin-schema": "latest",
		"babel-plugin-module-resolver": "^4.0.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.11.0",
		"eslint-config-spruce": "latest",
		"lerna": "^3.20.2",
		"prettier": "^2.2.0",
		"typescript": "^4.1.2",
		"yarn-upgrade-all": "^0.5.4"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/jest-sheets-reporter",
			"@sprucelabs/log",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/test",
			"@sprucelabs/test-utils",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
