{
	"version": "0.0.1",
	"private": true,
	"name": "spruce-mercury-workspace",
	"description": "All the tools you need to connect to a Mercury compatible API. ðŸ’¥",
	"workspaces": [
		"packages/mercury-client",
		"packages/mercury-event-emitter"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"scripts": {
		"lint": "lerna run lint",
		"lint.fix": "lerna run lint.fix",
		"lint.watch": "lerna run lint.watch --stream --parallel",
		"build": "lerna run build",
		"build.watch": "lerna run build.watch --stream --parallel",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"clean.all": "lerna run clean && rm -rf node_modules; for d in packages/*/node_modules; do echo $d; rm -rf $d; done",
		"test": "lerna run test --parallel",
		"test.watch": "lerna run test.watch --parallel",
		"publish": "lerna publish",
		"clean": "lerna run clean",
		"arkit": "lerna run arkit",
		"arkit.png": "lerna run arkit.png",
		"upgrade.packages": "yarn upgrade --latest && rm -f yarn.lock && yarn | true && yarn lint.fix || true",
		"upgrade.packages.workspaces": "yarn && for d in packages/*; do cd $d; yarn-upgrade-all; cd ../..; done",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages.workspaces && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@sprucelabs/babel-plugin-schema": ">=3.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"eslint": "^7.11.0",
		"eslint-config-spruce": "10.9.118",
		"lerna": "^3.20.2",
		"prettier": "^2.2.0",
		"typescript": "^4.0.3",
		"yarn-upgrade-all": "^0.5.4"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/jest-sheets-reporter",
			"@sprucelabs/log",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/test",
			"@sprucelabs/test-utils"
		]
	}
}
